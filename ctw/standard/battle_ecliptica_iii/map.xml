<regions>
    <rectangle name="all" min="-oo,-oo" max="oo,oo"/>
    <cuboid name="above-20" min="-oo,21,-oo" max="oo,oo,oo"/>
    <union name="spawns">
        <rectangle name="red-spawn" min="9,87" max="-8,107"/>
        <rectangle name="green-spawn" min="87,-8" max="107,9"/>
        <rectangle name="yellow-spawn" min="-8,-86" max="9,-106"/>
        <rectangle name="blue-spawn" min="-86,9" max="-106,-8"/>
    </union>
    <union name="wool-rooms">
        <rectangle name="red-wool-room" min="-7,117" max="8,129"/>
        <rectangle name="green-wool-room" min="117,8" max="129,-7"/>
        <rectangle name="yellow-wool-room" min="8,-116" max="-7,-128"/>
        <rectangle name="blue-wool-room" min="-116,-7" max="-128,8"/>
    </union>
    <negative name="no-void-areas">
        <union name="void-areas">
            <rectangle name="outer-red-to-yellow" min="-19,36" max="20,-35"/>
            <rectangle name="inner-red-to-yellow" min="11,-45" max="-10,46"/>
            <rectangle name="outer-blue-to-green" min="-35,20" max="36,-19"/>
            <rectangle name="inner-blue-to-green" min="-45,11" max="46,-10"/>
        </union>
    </negative>
    <union name="wool-placements">
        <block>1,9,102</block>
        <block>0,9,102</block>
        <block>-1,9,102</block>
        <block>102,9,-1</block>
        <block>102,9,0</block>
        <block>102,9,1</block>
        <block>-1,9,-102</block>
        <block>0,9,-102</block>
        <block>1,9,-102</block>
        <block>-102,9,1</block>
        <block>-102,9,0</block>
        <block>-102,9,-1</block>
    </union>
    <complement name="no-wool-placements">
        <region name="all"/>
        <region name="wool-placements"/>
    </complement>
    <!-- Applied -->
    <apply use="deny-beacon" block="deny-obsidian deny-spawner" message="`7This block is disabled on this map!">
        <region name="all"/>
        <region name="wool-rooms"/>
        <region name="spawns"/>
        <region name="above-20"/>
    </apply>
    <apply block="deny-void" message="`7You may not edit the void area!">
        <region name="no-void-areas"/>
    </apply>
    <apply block="deny-all" message="`7You may not edit above the height limit! (`c20 Blocks`7)">
        <region name="above-20"/>
    </apply>
    <apply block-place="deny-all" block-break="only-iron allow-leaves" message="`7You may only break the `6iron blocks `7at spawn!">
        <complement>
            <region name="spawns"/>
            <region name="wool-placements"/>
        </complement>
    </apply>
    <apply enter="deny-red" message="`7You may not enter your own wool room!">
        <region name="red-wool-room"/>
    </apply>
    <apply block="deny-all" use="deny-red">
        <region name="red-wool-room"/>
    </apply>
    <apply enter="deny-blue" message="`7You may not enter your own wool room!">
        <region name="blue-wool-room"/>
    </apply>
    <apply block="deny-all" use="deny-blue">
        <region name="blue-wool-room"/>
    </apply>
    <apply block="deny-all" use="deny-blue">
        <region name="red-wool-room"/>
    </apply>
    <apply enter="deny-green" message="`7You may not enter your own wool room!">
        <region name="green-wool-room"/>
    </apply>
    <apply block="deny-all" use="deny-green">
        <region name="green-wool-room"/>
    </apply>
    <apply enter="deny-yellow" message="`7You may not enter your own wool room!">
        <region name="yellow-wool-room"/>
    </apply>
    <apply block="deny-all" use="deny-yellow">
        <region name="yellow-wool-room"/>
    </apply>
    <apply block="deny-wool" message="`7No safety wools allowed!">
        <region name="no-wool-placements"/>
    </apply>
    <apply enter="only-blue" message="`7You may not enter the enemy spawn!">
        <region name="blue-spawn"/>
    </apply>
    <apply enter="only-red" message="`7You may not enter the enemy spawn!">
        <region name="red-spawn"/>
